/*-----------------------------*\
           $AVATARES
           
        Combierte el contenedor en un
        circulo que contiene una imagen
\*------------------------------*/

.circle
	
	&, 
	&--small, 
	&--medium,
	&--icon,
	&--icon-guide
		align-items center
		justify-content center
		overflow hidden
		border-radius 50%
		box-shadow: 0 2px 5px 0 rgba(0,0,0,.16),0 2px 10px 0 rgba(0,0,0,.12);
	&--small
		display block
		width 50px
		height 50px	
	&--medium
		width 100px
		height 100px
		display block
		
	&--icon
		display flex
		height 45px
		width 45px
		background-color $principal
		color white
		font-size: 28px
		margin -13px 0 0 auto
		
		
	&--icon-guide
		display flex
		height 45px
		width 45px
		font-size: 28px
		border-radius 0%
		box-shadow: none
		
