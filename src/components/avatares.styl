/*-----------------------------*\
           $AVATARES
           
        Combierte el contenedor en un
        circulo que contiene una imagen
\*------------------------------*/

.circle
	
	&, 
	&--small, 
	&--medium,
	&--icon
		align-items center
		justify-content center
		overflow hidden
		border-radius 50%
	&--small
		display block
		width 50px
		height 50px	
	&--medium
		width 100px
		height 100px
		display block
		
.circle--icon
	align-items center
	justify-content center
	display flex
	height 45px
	width 45px
	background-color $principal
	color white
	font-size: 28px
	margin -13px 0 0 auto