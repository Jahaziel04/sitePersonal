.title-main
	font-size: 1em
	text-transform: uppercase
	width: 227px
	//margin .7em 0 .1em 0
	display: inline-block
	//padding-left .5em
	transition: all .3s ease-out
	@media screen and (min-width: 1025px)
		font-size: 20px
		width: 275px
		//padding-left .7em
		
		
	&--brand
		display block
		text-align: center
		font-size: 16px
		font-weight: normal
		text-transform: uppercase
	&--profile
		color: #fff
		font-size: 1.2em
		text-transform: uppercase
		font-weight: 400
		margin-top: 60px
		display: inline-block
	&--contact
		color: #fff
		font-size: 1.2em
		text-transform: uppercase
		font-weight: 400
		margin 4em 0
		display: inline-block
	&--guide
		color $principal
		font-size: 1.2em
		text-transform: uppercase
		font-weight: normal
		
	

/// Si se coloca en un span y si contenedor es un titulo corto
/// se podra manejar su alineacion debajo del titulo
.line-p
	display: block
	content: ' '
	width: 50px
	height: 3px
	margin: 5px auto
	background-color $principal
	transition: all .3s ease-out

.line-index
	display: block
	content: ' '
	width: 50px
	height: 3px
	margin: 5px auto
	background-color white
	transition: all .3s ease-out
	@media screen and (max-width: 1025px)
		background-color $principal
	
.title-big
	font-size: 21px
	text-transform: uppercase
	font-weight: 100
	padding-left .5em
	transition: all .3s ease-out
	@media screen and (min-width: 1025px)
		font-size: 36px
		padding-left: 0
		
.subtitle-big
	padding: 1em 0 1em 1.3em
	display block
	@media screen and (min-width: 1025px)
		padding-left: 0
		font-size: 1.2em
		
		

.title-question
	font-size: 18px
	color white
	text-transform: uppercase
	padding 1.2em 0 .3em 0
	margin 0
	text-shadow: #757575 0px 0px 100px
.title-portfolio
	font-size: 18px
	text-transform: uppercase
	padding-left .5em
.sub-portfolio
	font-size: 1em
	padding-left .5em

.title-portfolio-x
	font-size: 18px
	text-transform: uppercase
	padding-left 1.5em
.sub-portfolio-x
	font-size: 1em
	padding-left 1.5em

