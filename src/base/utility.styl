/*-----------------------------*\
           $LINEAS
           Linea debajo de un titulo
\*------------------------------*/
.line-index
	background-color $principal
	color $principal
.line-answer
	border-bottom 2px solid $fondo
.line-odd
	border-bottom 1px solid rgba(242, 242, 242, 0.15)
.line-odd:nth-child(odd)
	border-right 1px solid rgba(242, 242, 242, 0.15)
.line::after
	display block; 
	content ' '; 
	width 90px 
	height 2px; 
	background $principal
	margin 7px auto;
.line-85::after
	display block; 
	content ' '; 
	width 85% 
	height 1px; 
	background solid rgba(221, 221, 221, 0.28)
	margin 7px auto;
.line-top
	border-top 1px solid #ddd;
.line-bottom
	border-bottom 1px solid rgba(221, 221, 221, 0.28)
