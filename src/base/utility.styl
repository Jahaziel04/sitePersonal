	@media screen and (max-width: 719px)
		max-width: 100% !important
		flex-basis: 100% !important
		//flex-basis: 41.667% !important
		//max-width: 41.667% !important
		
	

/*-----------------------------*\
           $ESPACIADOR
Majera los espacios en diferentes resoluciones
\*------------------------------*/
.pru
	width: 98%



/*-----------------------------*\
           $IMAGEN-FULL
           
           imgagen al 100%
\*------------------------------*/
.imgfull
	width: 100%
.imgfull-x
	width: 100%
	height 100%



/*-----------------------------*\
           $BOX_PADDING
    Tiene un padding top y bottom de 1em
\*------------------------------*/
.box-padding-t
	padding-top 1.1em
.box-padding-b
	padding-bottom 1.1em
.box-padding--x2
	padding 2.1em
	

/*-----------------------------*\
           $BOX_MARGIN
    Tiene un margin top de 7.1 lo uso en
    para hacer el efecto de la imagen de fondo
\*------------------------------*/
.box-margin-t
	margin-top 3.1em
.box-margin-b
	margin-bottom 3.1em
/*-----------------------------*\
           $LINEAS
           Linea debajo de un titulo
\*------------------------------*/
.line::after
	display block; 
	content ' '; 
	width 90px 
	height 2px; 
	background $principal
	margin 7px auto;
.line-85::after
	display block; 
	content ' '; 
	width 85% 
	height 1px; 
	background solid rgba(221, 221, 221, 0.28)
	margin 7px auto;
.line-top
	border-top 1px solid #ddd;
.line-bottom
	border-bottom 1px solid rgba(221, 221, 221, 0.28)
/*-----------------------------*\
       $CAPA DE TRANSPARENCIA           
\*------------------------------*/
.transparent
	height: 250px
	width: 100%
	position: absolute
	top 0
	left 0
	background-color: rgba(83,119,128,0.5)

.bgc-transparent
	background-color: rgba(83,119,128,0.5)
.bgc-complementario
	background-color: $complementario

.transparent-portfolio
	background-color rgba(83,119,128,0.5)
	height: 100%
	top 0
	left 0
	right 0
	overflow hidden
	&:hover
		top 100%
/*-----------------------------*\
           $BACKGROUND-IMG
           
\*------------------------------*/
.back-img
	background-image: url('../img/negocio.jpg')
	background-size cover
	background-repeat no-repeat
	background-position: center
	height: 200px
	width: 100%
	z-index: -1
	background-attachment fixed
	
	&--profile
		background-image url('../img/back-img.jpg')
		background-size cover
		background-repeat no-repeat
		width 100%
		z-index: 0
		position relative
		//Estructura de uso
		//div container > div content
		//El contenido debe ir justo despues de div container
		//Ocupar z-index para asegurar que el contenido este encima
		&--t
			background-color rgba(83, 119, 128, 0.35)
			background-size cover
			background-repeat no-repeat
			width 100%
			position absolute
			top 0
			bottom 0

	&--contact
		background-image url('../img/contacto.jpg')
		background-size cover
		background-repeat no-repeat
		width 100%
		z-index: 0
		position relative
		//Estructura de uso
		//div container > div content
		//El contenido debe ir justo despues de div container
		//Ocupar z-index para asegurar que el contenido este encima
		&--t
			background-color rgba(83, 119, 128, 0.35)
			background-size cover
			background-repeat no-repeat
			width 100%
			position absolute
			top 0
			bottom 0

.filtro-blur
	-webkit-filter: blur(3px);
	filter: blur(2px);


.back-img--contain
	background-image: url('../img/features.jpg')
	background-size cover
	background-repeat no-repeat
	background-position: center

.relative
	position: relative
	
.absolute
	position: absolute
	

.shadow-card
	box-shadow: 0 2px 5px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12);
.bgc-up
	background-color: #757575

/*-----------------------------*\
           $Z-INDEX
	Controla la exposicion de
	las capas de los elementos
\*------------------------------*/
.z-index
	&,
	&--1,
	&--2,
	&--3
		z-index: 0
	&--1
		z-index: 1
	&--2
		z-index: 2
	&--3
		z-index: 3
		
/*-----------------------------*\
           $Linea expand
	Se expande la linea al pasar el cursor sobre
	el contenedor
\*------------------------------*/		
.col-10:hover .title-main--profile .line-p
	background-color: $secundario
	width: 100%
.col-10:hover .title-main--contact .line-p
	background-color: $secundario
	width: 100%	

/*-----------------------------*\
           $LINKS
           
\*------------------------------*/
.link
	font-style: italic
	font-size: 13px
	color $principal
	
/*-----------------------------*\
    $CENTRADO ABSOLUTO
           
\*------------------------------*/
.center-absolute
	position absolute
	margin 0 auto
	left 0
	right 0
	top -50px
	
/*-----------------------------*\
    $BOTTOM ABSOLUTO
           
\*------------------------------*/
.bottom-absolute
	position absolute
	margin 0 auto
	left 2.5em
	bottom -50px
