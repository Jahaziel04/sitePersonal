.pru
	width: 98%



/*-----------------------------*\
           $IMAGEN-FULL
           
           imgagen al 100%
\*------------------------------*/
.imgfull
	width: 100%



/*-----------------------------*\
           $LINEA
           Linea debajo de un titulo
\*------------------------------*/
.line::after
	display block; 
	content ' '; 
	width 90px 
	height 2px; 
	background $principal
	margin 7px auto;
	
/*-----------------------------*\
           $BACKGROUND-IMG
           
\*------------------------------*/
.back-img
	background-image: url('../img/negocio.jpg')
	height: 750px
	background-repeat no-repeat
	background-position: center
	background-attachment: fixed
	background-size: cover
	width: 100%
	position: relative
/*-----------------------------*\
       $CAPA DE TRANSPARENCIA           
\*------------------------------*/
.transparent
	height: 750px
	width: 100%
	position: absolute
	top 0
	left 0
	background-color: rgba(83,119,128,0.5)
