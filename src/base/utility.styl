/*-----------------------------*\
           $BACKGROUND-IMG
           
\*------------------------------*/
.back-img
	background-image: url('../img/negocio.jpg')
	background-size cover
	background-repeat no-repeat
	background-position: center
	height: 200px
	width: 100%
	z-index: -1
	background-attachment fixed

.filtro-blur
	-webkit-filter: blur(3px);
	filter: blur(2px);


.back-img--contain
	background-image: url('../img/features.jpg')
	background-size cover
	background-repeat no-repeat
	background-position: center

.relative
	position: relative
	
.absolute
	position: absolute