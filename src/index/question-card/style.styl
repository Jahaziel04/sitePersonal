.title-deco-mas
  margin 4em 0 5em 0


.plus-deco  
  display block
  position: absolute
  font-size 1.5em
  top 0em
  left .8em
  




  
.tab, .tab-content
  clear both
  //padding-top 10px
  display none

.label-tab
  font-weight: normal;
  font-size: 18px;
  display: block;
  float: left;
  width: 100%;
  //padding: 1.5em;
  color: #757575;
  cursor: pointer;
  text-decoration: none;
  text-align: center;
