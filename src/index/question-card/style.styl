.question-card
  background-color: $principal
  color white
  transition: all .3s ease-out;
  @media screen and (min-width: 1025px)
    background-color: $fondo

.question-content
  background-color: white
  color $complementario
  padding 1.1em 0
	
  &-item
    background-color white
    border 1px solid rgba(221, 221, 221, 0.32)
    position relative
    transition: all .3s ease-out
    &:hover
      box-shadow 0 2px 5px 0 rgba(0, 0, 0, .16), 0 2px 10px 0 rgba(0, 0, 0, .12)
      z-index: 1
  	
    
     
//  	&:hover
//       box-shadow: 0px 0px 20px rgba(0,0,0,0.22);
  

.checkbox, .checkbox-content
  clear both
  padding-top 10px
  display none
  
.label-checkbox
  position: absolute;
  right: 0;
  top: 10px
  font-weight: 700;
  font-size: 24px;
  display: inline-block;
  width: 15%;
  //padding: 1.1px;
  color: #757575;
  cursor: pointer;
  text-decoration: none;
  text-align: center;
  background-color: white
  //margin: .1em;
  
.label-arrow
    //border 1px solid red
    width: 100%
    display inline-block
    padding 0
    
.title-deco-show
  color $complementario
  font-weight: normal
  display: block;
  //border-bottom: 1px solid rgba(104, 104, 104, 0.18);
  padding 1em 0 1em .5em;
  margin: 0;
  width 85%
  font-size: 1em
  

    
    

#check1:checked ~ #content-check1,
#check2:checked ~ #content-check2,
#check3:checked ~ #content-check3,
#check4:checked ~ #content-check4,
#check5:checked ~ #content-check5

  display block
  //padding 20px
  background-color rgba(242, 242, 242, 0.65)
  height: 100%
.question-content [id^="check"]:checked + label
  color $secundario
  .label-arrow
    transform rotate(180deg)

.kilo
  color white
.milo
  color white
.bgc
  height 90px
  min-width 90px
  width  90px
  min-height 90px
  background-color: red
  display inline-block


.centrar
  margin 0 auto


      
  
  &-content
    display none

.product.activo
  .toggle
    background: $header-color;
    color: white;
    

  div
    display: flex;
  figure
    display: flex;

.activo-0-height
  box-shadow 2px 2px 20px #ccc;
  
